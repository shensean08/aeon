<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.ui.theme" value="simple" />
    <package name="edu.kgu.aeon.Action" extends="json-default">      
        <!-- loginAction -->
        <action name="loginAction" class="edu.kgu.aeon.Action.loginAction">
            <result name="input">login.jsp</result>
            <result name="success">registerConfirm.jsp</result>
        </action>
 
         <!-- myQRAction -->
        <action name="myQRAction" class="edu.kgu.aeon.Action.myQRAction">
            <result name="success">registerConfirm.jsp</result>
        </action>
       
        <!-- userInfoEditAction -->
        <action name="userInfoEditAction" class="edu.kgu.aeon.Action.userInfoEditAction">
            <result name="BASEINFO">userInfoEdit.jsp</result>
            <result name="ADDRESS1">userInfoAddress1.jsp</result>
            <result name="ADDRESS2">userInfoAddress2.jsp</result>
            <result name="ADDRESS3">userInfoAddress3.jsp</result>
            <result name="ADDRESS4">userInfoAddress4.jsp</result>
            <result name="ADDRESS5">userInfoAddress5.jsp</result>
        </action>
                
        <!-- registerAction -->
        <action name="registerAction" class="edu.kgu.aeon.Action.registerAction">
            <result name="input">register.jsp</result>
            <result name="success">registerConfirm.jsp</result>
        </action>

		<!-- downloadAction -->
        <action name="downloadAction" class="edu.kgu.aeon.Action.downloadAction">
        	<result type="json">
				<param name="root">result</param>
            </result>
        </action>

		<!-- showDownloadAction -->
        <action name="showDownloadAction" class="edu.kgu.aeon.Action.showDownloadAction">
			<result name="success">showDownload.jsp</result>
        </action>
        		
		<!-- loginQrAction -->
        <action name="loginQrAction" class="edu.kgu.aeon.Action.loginQrAction">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>
