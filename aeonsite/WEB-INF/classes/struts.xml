<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.ui.theme" value="simple" />
    <package name="edu.kgu.aeon.Action" extends="json-default">      
        <!-- loginAction -->
        <action name="loginAction" class="edu.kgu.aeon.Action.loginAction">
            <result name="input">login.jsp</result>
            <result name="success">userInfoQR.jsp</result>
        </action>
 
         <!-- myQRAction -->
        <action name="myQRAction" class="edu.kgu.aeon.Action.myQRAction">
            <result name="success">userInfoQR.jsp</result>
        </action>
       
        <!-- delDownloadAction -->
        <action name="delDownloadAction" class="edu.kgu.aeon.Action.delDownloadAction">
            <result name="success">showDownload.jsp</result>
        </action>
        
        <!-- userInfoShowAction -->
        <action name="userInfoShowAction" class="edu.kgu.aeon.Action.userInfoShowAction">
            <result name="BASEINFO_SHOW">userInfoShow.jsp</result>
            <result name="ADDRESS1_SHOW">userInfoAddress1Show.jsp</result>
            <result name="ADDRESS2_SHOW">userInfoAddress2Show.jsp</result>
            <result name="ADDRESS3_SHOW">userInfoAddress3Show.jsp</result>
            <result name="ADDRESS4_SHOW">userInfoAddress4Show.jsp</result>
            <result name="ADDRESS5_SHOW">userInfoAddress5Show.jsp</result>
        </action>
        
        <!-- userInfoEditAction -->
        <action name="userInfoEditAction" class="edu.kgu.aeon.Action.userInfoEditAction">
            <result name="BASEINFO_EDIT">userInfoEdit.jsp</result>
            <result name="ADDRESS1_EDIT">userInfoAddress1.jsp</result>
            <result name="ADDRESS2_EDIT">userInfoAddress2.jsp</result>
            <result name="ADDRESS3_EDIT">userInfoAddress3.jsp</result>
            <result name="ADDRESS4_EDIT">userInfoAddress4.jsp</result>
            <result name="ADDRESS5_EDIT">userInfoAddress5.jsp</result>
        </action>
                
        <!-- registerAction -->
        <action name="registerAction" class="edu.kgu.aeon.Action.registerAction">
            <result name="input">register.jsp</result>
            <result name="success">userInfoMain.jsp</result>
        </action>

        <!-- userInfoUpdateAction -->
        <action name="userInfoUpdateAction" class="edu.kgu.aeon.Action.userInfoUpdateAction">
            <result name="BASEINFO_UPDATE">userInfoEdit.jsp</result>
            <result name="ADDRESS1_UPDATE">userInfoAddress1.jsp</result>
            <result name="ADDRESS2_UPDATE">userInfoAddress2.jsp</result>
            <result name="ADDRESS3_UPDATE">userInfoAddress3.jsp</result>
            <result name="ADDRESS4_UPDATE">userInfoAddress4.jsp</result>
            <result name="ADDRESS5_UPDATE">userInfoAddress5.jsp</result>
            <result name="BASEINFO_SHOW">userInfoShow.jsp</result>
            <result name="ADDRESS1_SHOW">userInfoAddress1Show.jsp</result>
            <result name="ADDRESS2_SHOW">userInfoAddress2Show.jsp</result>
            <result name="ADDRESS3_SHOW">userInfoAddress3Show.jsp</result>
            <result name="ADDRESS4_SHOW">userInfoAddress4Show.jsp</result>
            <result name="ADDRESS5_SHOW">userInfoAddress5Show.jsp</result>
        </action>
        
		<!-- downloadAction -->
        <action name="downloadAction" class="edu.kgu.aeon.Action.downloadAction">
        	<result type="json">
				<param name="root">result</param>
            </result>
        </action>

		<!-- showDownloadAction -->
        <action name="showDownloadAction" class="edu.kgu.aeon.Action.showDownloadAction">
			<result name="success">showDownload.jsp</result>
        </action>
        		
		<!-- loginQrAction -->
        <action name="loginQrAction" class="edu.kgu.aeon.Action.loginQrAction">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>
